<?xml version="1.0"?>
<ruleset name="Kadence WP Coding Standards">

	<rule ref="WordPress-VIP-Go"/>

	<rule ref="WordPressVIPMinimum.Functions.RestrictedFunctions.file_ops_file_put_contents">
		<exclude-pattern>*</exclude-pattern>
	</rule>

	<rule ref="WordPress-Docs">
		<exclude-pattern>*/tests/*</exclude-pattern>
	</rule>

	<rule ref="WordPress">
		<exclude name="WordPress.Files.FileName"/>
		<exclude name="Generic.Arrays.DisallowShortArraySyntax"/>
		<exclude name="WordPress.PHP.YodaConditions.NotYoda"/>
		<exclude name="WordPress.NamingConventions.ValidHookName.UseUnderscores"/>
		<exclude name="WordPress.WP.CapitalPDangit"/>
	</rule>

    <rule ref="Squiz.Commenting.FunctionComment">
        <properties>
            <property name="skipIfInheritdoc" value="true" />
        </properties>
    </rule>

	<rule ref="StellarWP"/>

	<rule ref="StellarWP.Classes.ValidClassName.NotSnakeCase">
		<exclude-pattern>./tests/*</exclude-pattern>
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.VariableComment.Missing">
		<exclude-pattern>./includes/resources/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.FileComment.Missing">
		<exclude-pattern>./includes/resources/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.FunctionComment.MissingParamComment">
		<exclude-pattern>./includes/resources/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.ClassComment.Missing">
		<exclude-pattern>./includes/resources/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.FunctionComment.Missing">
		<exclude-pattern>./includes/resources/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.NamingConventions.ValidVariableName.PropertyNotSnakeCase">
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.NamingConventions.ValidVariableName.UsedPropertyNotSnakeCase">
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase">
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="WordPress.NamingConventions.ValidFunctionName.MethodNameInvalid">
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.FunctionComment.ParamNameNoMatch">
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.FunctionComment.MissingParamTag">
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="Squiz.Commenting.FunctionComment.IncorrectTypeHint">
		<exclude-pattern>./includes/resources/Optimizer/Response/*</exclude-pattern>
	</rule>

	<rule ref="PHPCompatibilityWP"/>
	<config name="testVersion" value="7.4-"/>

	<file>./src</file>
	<exclude-pattern>*.css</exclude-pattern>
	<exclude-pattern>*.js</exclude-pattern>
</ruleset>
